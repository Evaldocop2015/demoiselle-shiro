<?xml version="1.0" encoding="UTF-8"?>
<persistence version="2.0" xmlns="http://java.sun.com/xml/ns/persistence" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://java.sun.com/xml/ns/persistence http://java.sun.com/xml/ns/persistence/persistence_2_0.xsd">
	<persistence-unit name="demoiselleshiro">
		<class>br.tjce.demoiselleshiro.domain.Entidade</class>
		<class>br.tjce.demoiselleshiro.domain.EntidadesHasPerfi</class>
		<class>br.tjce.demoiselleshiro.domain.EntidadesHasPerfiPK</class>
		<class>br.tjce.demoiselleshiro.domain.Erro</class>
		<class>br.tjce.demoiselleshiro.domain.Logs</class>
		<class>br.tjce.demoiselleshiro.domain.Perfis</class>
		<class>br.tjce.demoiselleshiro.domain.Permissoes</class>
		<class>br.tjce.demoiselleshiro.domain.Sistema</class>
		<class>br.tjce.demoiselleshiro.domain.Usuario</class>
		<class>br.tjce.demoiselleshiro.domain.LogsAcoes</class>
			
		<properties>
		
<!-- 			property eclipselink.jdbc.user is deprecated, property javax.persistence.jdbc.user should be used instead. -->
<!-- 			property eclipselink.jdbc.driver is deprecated, property javax.persistence.jdbc.driver should be used instead. -->
<!-- 			property eclipselink.jdbc.url is deprecated, property javax.persistence.jdbc.url should be used instead. -->
<!-- 			property eclipselink.jdbc.password is deprecated, property javax.persistence.jdbc.password should be used instead. -->
		
			<property name="eclipselink.target-database" value="MYSQL" />
			<property name="eclipselink.ddl-generation" value="update" />
<!-- 			<property name="eclipselink.logging.level" value="SEVERE" /> -->
			<property name="javax.persistence.jdbc.driver" value="com.mysql.jdbc.Driver" />
			<property name="javax.persistence.jdbc.url" value="jdbc:mysql://localhost:3306/banco_erros_cayenne" />
			<property name="javax.persistence.jdbc.user" value="root" />
			<property name="javax.persistence.jdbc.password" value="" />			
			<property name="eclipselink.logging.level" value="FINE" />
		</properties>
	</persistence-unit>
</persistence>
